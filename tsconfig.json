{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }

}
